{
  "name": "server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prestart": ". ~/.nvm/nvm.sh && nvm use",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/app/ormconfig.ts",
    "migrate:all": "npm run typeorm migration:run",
    "migrate:generate": "npm run typeorm migration:generate",
    "migrate:create": "npm run typeorm migration:create",
    "migrate:undo": "npm run typeorm migration:revert",
    "docker:dependencies:up": "docker-compose -f ./docker/docker_dependency.yml up -d",
    "docker:dependencies:down": "docker-compose -f ./docker/docker_dependency.yml down",
    "seed:fake": "ts-node src/db/seeds/fake.seed.runner.ts"
  },
  "engines": {
    "node": "12.16.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/platform-socket.io": "^10.0.5",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/websockets": "^10.0.5",
    "@types/faker": "^6.6.9",
    "@types/hapi__joi": "^17.1.7",
    "@types/socket.io": "^3.0.2",
    "bcrypt": "^5.0.1",
    "class-validator": "^0.14.0",
    "dotenv": "^10.0.0",
    "faker": "^5.5.3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.21",
    "lyrics-finder": "^21.7.0",
    "moment": "^2.29.1",
    "mongoose": "^7.3.4",
    "next-auth": "^4.22.3",
    "pg": "^8.11.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.2",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.4",
    "yt-search": "^2.8.0",
    "ytdl-core": "^4.8.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.3",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^10.0.5",
    "@types/eslint": "^8.40.0",
    "@types/eslint-scope": "^3.7.4",
    "@types/estree": "^1.0.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^26.0.22",
    "@types/next-auth": "^3.15.0",
    "@types/node": "^14.14.36",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^25.0.0",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-loader": "^8.4.0",
    "tsconfig-paths": "^3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}